{
  "name": "gymbuddy-n8n",
  "description": "n8n automation platform for GymBuddy WhatsApp workflow",
  "keywords": ["n8n", "automation", "workflow", "gymbuddy"],
  "env": {
    "N8N_HOST": {
      "description": "The public hostname of this Heroku app",
      "value": "0.0.0.0"
    },
    "N8N_PORT": {
      "description": "Port for n8n",
      "value": "80"
    },
    "WEBHOOK_URL": {
      "description": "Base URL for webhooks",
      "value": "https://gymbuddy-n8n.herokuapp.com"
    },
    "N8N_BASIC_AUTH_ACTIVE": {
      "description": "Enable basic authentication",
      "value": "true"
    },
    "N8N_BASIC_AUTH_USER": {
      "description": "Basic auth username",
      "value": "admin"
    },
    "N8N_BASIC_AUTH_PASSWORD": {
      "description": "Basic auth password",
      "generator": "secret"
    },
    "N8N_SECURE_COOKIE": {
      "description": "Use secure cookies",
      "value": "false"
    },
    "GENERIC_TIMEZONE": {
      "description": "Timezone",
      "value": "Europe/London"
    },
    "N8N_PROTOCOL": {
      "description": "Protocol",
      "value": "https"
    },
    "NODE_ENV": {
      "description": "Node environment",
      "value": "production"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "eco"
    }
  },
  "addons": [
    "heroku-postgresql:essential-0"
  ],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "stack": "heroku-22"
}